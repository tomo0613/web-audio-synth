{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "jsx": "react-jsx",
        "outDir": "tsc_build",
        "baseUrl": "src",
        "paths": {
            "@common/*": ["common/*"],
            "@core/*": ["core/*"],
            "@ui/*": ["ui/*"]
        },
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}
